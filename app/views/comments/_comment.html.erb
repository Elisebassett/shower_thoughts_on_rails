<div class="comment">
	<p class="card-title"><%= comment.user.username %></p>
	<%= form_with model: comment, class: "comment_edit_form" do |f| %>
		<%= f.text_area :content, class: "comment_content", readonly: "true" %>
	<%= link_to "Delete", comment, method: :delete, class: "delete_comment card-link", remote: true %>
		<i class="fa fa-pencil edit_comment card-link" aria-hidden="true"></i>
		<p class="comment_edit_submit"></p>
		<%= f.submit "Update Comment", class: "edit_button" %>
	<% end %>
</div>
